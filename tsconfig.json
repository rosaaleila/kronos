{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./lib", 
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@data/*": ["./src/data/*"],
      "@presentation/*": ["./src/presentation/*"]
    },
  },
  "exclude": [
    "test"
  ]
}